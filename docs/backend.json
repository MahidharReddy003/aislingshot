
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Comprehensive user profile for AI personalization.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "age": { "type": "number" },
        "bio": { "type": "string", "description": "Short user biography." },
        "profileImage": { "type": "string", "description": "URL to profile image." },
        "location": { "type": "string" },
        "budgetPreference": { "type": "number" },
        "interests": {
          "type": "array",
          "items": { "type": "string" }
        },
        "healthConditions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Specific health needs or dietary restrictions (e.g., 'Diabetes', 'Vegan', 'Knee Pain')."
        },
        "role": { "type": "string" },
        "aiBehavior": { "type": "string", "enum": ["formal", "friendly"] },
        "availableTime": { "type": "number" },
        "currency": { "type": "string", "default": "INR" },
        "hasCompletedSetup": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "hasCompletedSetup"]
    },
    "UserPlan": {
      "title": "UserPlan",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "planData": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserProfile" },
      "description": "User profile data."
    },
    "/users/{userId}/plans/{planId}": {
      "schema": { "$ref": "#/backend/entities/UserPlan" },
      "description": "Saved AI plans."
    }
  }
}
